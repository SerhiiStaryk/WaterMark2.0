{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "object-curly-spacing": [
            2,
            "always"
        ],
        "indent": [
            "error",
            2,
            {
                "MemberExpression": 1
            }
        ],
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "operator-linebreak": [
            "error",
            "after",
            {
                "overrides": {
                    "?": "ignore",
                    ":": "ignore"
                }
            }
        ]
    }
}
